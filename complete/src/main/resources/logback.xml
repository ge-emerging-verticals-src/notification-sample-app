<?xml version="1.0" encoding="UTF-8"?>

<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>NOTIFICATION SAMPLE APP: %d{HH:mm:ss.SSS} %level | %thread | %-55logger{55} | %msg %n</pattern>
    </encoder>
  </appender>

  <logger name="com.ge" level="ERROR"/>

  <root level="ERROR">
    <appender-ref ref="STDOUT" />
  </root>  
  
</configuration>
